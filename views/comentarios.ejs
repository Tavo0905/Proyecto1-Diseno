<!DOCTYPE html>
<html>
<head>
    <link rel = "stylesheet" href = "style.css">
    <title>Comentarios</title>
</head>
<body>
  <h1>Comentarios</h1>

  <h2 class = "tituloComen">Comentarios anteriores:</h2>

  <form action = "/comentarios" method = "POST" enctype = "multipart/form-data">
    <div class = "containerDatos" style = "overflow-y: scroll;">
      <% if (comentarios.length === 0) { %>
        <p>No hay comentarios a√∫n.</p>
      <% } else { %>
        <% comentarios.forEach(function(comentario) { %>
          <p>
            <strong><%= comentario.nombre %></strong>
            : <%= comentario.mensaje %>
            <input type = "radio" id = "rdBtnComentario" name = "rdBtnComentario" value = "<%= comentario.nombre %>"/>
          </p>
        <% }); %>
      <% } %>
    </div>


    <label class = "tituloComen" id = "mensajeTxt" for="mensaje">Mensaje:</label><br>
    <textarea id = "mensaje" name = "mensaje" rows = "4" cols = "50" required></textarea><br><br>

    <button class = "submitComentario" type = "submit">Enviar</button>
  </form>

</body>
</html>
